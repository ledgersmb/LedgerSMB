{
  "name": "ledgersmb-js",
  "version": "1.9.0-dev",
  "lockfileVersion": 2,
  "description": "LedgerSMB JS files",
  "keywords": [
    "JavaScript",
    "Dojo",
    "Toolkit",
    "Dijit",
    "lsmb"
  ],
  "maintainers": [
    {
      "name": "Erik Huelsmann"
    },
    {
      "name": "Chris Travers"
    }
  ],
  "contributors": [
    {
      "name": "John Locke"
    },
    {
      "name": "David Godfrey"
    },
    {
      "name": "Yves Lavoie"
    }
  ],
  "license": "GPL-3.0-or-later",
  "bugs": "https://github.com/ledgersmb/LedgerSMB/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ledgersmb/LedgerSMB.git"
  },
  "bundlesize": [
    {
      "path": "./UI/js/*"
    }
  ],
  "browserslist": [
    "supports es6-module and supports xhr2 and supports bloburls and supports css-variables and supports css3-boxsizing and supports border-radius"
  ],
  "devDependencies": {
    "@babel/eslint-parser": "7.14.7",
    "@babel/plugin-proposal-object-rest-spread": "7.14.7",
    "@babel/preset-env": "7.14.7",
    "autoprefixer": "10.2.6",
    "babel-loader": "8.2.2",
    "browserslist": "4.16.6",
    "buffer": "6.0.3",
    "caniuse-lite": "1.0.30001241",
    "clean-webpack-plugin": "3.0.0",
    "compression-webpack-plugin": "8.0.1",
    "copy-webpack-plugin": "9.0.1",
    "css-loader": "5.2.6",
    "css-minimizer-webpack-plugin": "3.0.2",
    "cssnano": "5.0.6",
    "depcheck": "1.4.2",
    "dojo-util": "1.16.4",
    "dojo-webpack-plugin": "3.0.1",
    "ejs-loader": "0.5.0",
    "eslint": "7.29.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-eslint": "7.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-friendly-formatter": "4.0.1",
    "eslint-plugin-amd": "1.1.0",
    "eslint-plugin-compat": "3.9.0",
    "eslint-plugin-html": "6.1.2",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsdoc": "35.4.1",
    "eslint-plugin-json": "3.0.0",
    "eslint-plugin-markdown": "2.2.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-snakecasejs": "2.2.0",
    "eslint-plugin-sort-dojo-dependency": "0.0.1",
    "eslint-webpack-plugin": "2.5.4",
    "html-webpack-plugin": "5.3.2",
    "inspectpack": "4.7.1",
    "markdown-include": "0.4.3",
    "markdown-spellcheck": "1.3.1",
    "markdownlint": "0.23.1",
    "markdownlint-cli": "0.27.1",
    "mini-css-extract-plugin": "2.0.0",
    "npm-run-all": "4.1.5",
    "path-browserify": "1.0.1",
    "prettier": "2.3.2",
    "stylelint": "13.13.1",
    "stylelint-config-standard": "22.0.0",
    "stylelint-no-unsupported-browser-features": "5.0.1",
    "stylelint-order": "4.1.0",
    "stylelint-order-config-standard": "0.1.3",
    "stylelint-webpack-plugin": "2.2.2",
    "unix-timestamp": "0.2.0",
    "unused-webpack-plugin": "2.4.0",
    "webpack": "5.41.1",
    "webpack-bundle-analyzer": "4.4.2",
    "webpack-cli": "4.7.2",
    "webpack-log": "3.0.2",
    "webpack-merge": "5.8.0",
    "webpack-sources": "2.3.0",
    "yargs": "17.0.1"
  },
  "dependencies": {
    "content-disposition": "0.5.3",
    "dijit": "1.16.4",
    "dojo": "1.16.4"
  },
  "homepage": "http://ledgersmb.org/",
  "scripts": {
    "analyzer": "webpack-bundle-analyzer logs/stats.json UI/js -h 0.0.0.0",
    "build //": "See https://corgibytes.com/blog/2017/04/18/npm-tips/",
    "build": "webpack --mode=production --stats errors-warnings",
    "build:dev": "webpack --progress --mode=development --stats errors-warnings",
    "lint": "npm run lint:css;npm run lint:js;npm run lint:markdown",
    "lint:css": "stylelint UI/css/*.css",
    "lint:js": "eslint --ext .js ./",
    "lint:markdown": "markdownlint --config .markdownlint.json --ignore ./node_modules .",
    "profile": "webpack --progress=profile --json > logs/stats.json"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ]
  },
  "eslintConfig": {
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [
            "UI"
          ]
        }
      }
    },
    "plugins": [
      "amd",
      "compat",
      "markdown",
      "sort-dojo-dependency",
      "prettier"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      },
      "requireConfigFile": false,
      "templateSettings": {
        "evaluate": [
          "[%",
          "%]"
        ],
        "interpolate": [
          "[%",
          "%]"
        ],
        "escape": [
          "[%",
          "%]"
        ]
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "amd": true,
      "es6": true
    },
    "extends": [
      "airbnb-base/legacy",
      "prettier",
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:markdown/recommended"
    ],
    "ignorePatterns": [
      "dojo/",
      "dijit/",
      "node_modules/",
      "js/",
      "**/*.po*",
      "pod/**"
    ],
    "rules": {
      "camelcase": "error",
      "compat/compat": "warn",
      "consistent-return": "error",
      "curly": [
        "error",
        "all"
      ],
      "dot-notation": "error",
      "eqeqeq": "error",
      "func-names": 0,
      "global-require": "error",
      "guard-for-in": "error",
      "new-cap": 0,
      "no-alert": "error",
      "no-console": "error",
      "no-continue": 0,
      "no-else-return": "error",
      "no-lonely-if": "error",
      "no-multi-assign": "error",
      "no-multi-spaces": "error",
      "no-new-object": "error",
      "no-param-reassign": "error",
      "no-plusplus": 0,
      "no-restricted-globals": "error",
      "no-shadow": "error",
      "no-template-curly-in-string": "error",
      "no-undef": "error",
      "no-underscore-dangle": 0,
      "no-unused-expressions": "error",
      "no-unused-vars": "error",
      "no-use-before-define": "error",
      "no-useless-escape": "error",
      "no-useless-return": "error",
      "one-var": "error",
      "radix": "error",
      "spaced-comment": [
        "error",
        "always",
        {
          "block": {
            "balanced": true
          }
        }
      ],
      "vars-on-top": 0,
      "yoda": "error",
      "amd/no-unused-dependencies": "error",
      "amd/obsolete-dependencies": "error",
      "amd/sane-dependency-names": "error",
      "prettier/prettier": [
        "error",
        {
          "bracketSpacing": true,
          "printWidth": 80,
          "quote-props": [
            "error",
            "consistent"
          ],
          "semi": true,
          "singleQuote": false,
          "tabWidth": 4,
          "trailingComma": "none",
          "useTabs": false,
          "insertPragma": true,
          "proseWrap": "preserve"
        }
      ],
      "no-restricted-syntax": [
        "error",
        "SequenceExpression"
      ]
    }
  },
  "stylelint": {
    "defaultSeverity": "warning",
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-no-unsupported-browser-features",
      "stylelint-order"
    ],
    "ignoreFiles": [
      "**/*.js",
      "**/*.jsx",
      "**/*.html",
      "**/*.po*",
      "UI/**/dojo/**/*.css",
      "UI/**/dijit/**/*.css",
      "UI/**/util/**/*.css",
      "UI/js/**",
      "UI/pod/**"
    ],
    "rules": {
      "declaration-block-no-duplicate-custom-properties": null,
      "indentation": 4,
      "order/order": [
        "custom-properties",
        "declarations"
      ],
      "order/properties-alphabetical-order": true,
      "plugin/no-unsupported-browser-features": true
    }
  }
}
