{
  "name": "ledgersmb-js",
  "version": "1.10.15-dev",
  "lockfileVersion": 2,
  "description": "LedgerSMB JS files",
  "keywords": [
    "JavaScript",
    "Dojo",
    "Toolkit",
    "Dijit",
    "lsmb"
  ],
  "license": "GPL-2.0-or-later",
  "maintainers": [
    {
      "name": "Erik Huelsmann"
    },
    {
      "name": "Chris Travers"
    }
  ],
  "contributors": [
    {
      "name": "John Locke"
    },
    {
      "name": "David Godfrey"
    },
    {
      "name": "Yves Lavoie"
    }
  ],
  "bundlesize": [
    {
      "path": "./UI/js/*"
    }
  ],
  "_browserslist-comment": [
    "explicitly exclude Edge <= 18, because 'and supports input-event'",
    "fails to exclude Edge 16-18"
  ],
  "browserslist": [
    "supports es6-module and supports async-functions and supports xhr2 and supports bloburls and supports css-variables and supports css3-boxsizing and supports border-radius and supports fetch and supports classlist and supports multicolumn and not edge <= 18"
  ],
  "bugs": "https://github.com/ledgersmb/LedgerSMB/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ledgersmb/LedgerSMB.git"
  },
  "dependencies": {
    "content-disposition": "0.5.4",
    "dijit": "1.17.3",
    "dojo": "1.17.3",
    "robot3": "0.4.0",
    "vue-i18n": "9.2.2"
  },
  "devDependencies": {
    "@babel/core": "7.21.4",
    "@babel/eslint-parser": "7.21.3",
    "@babel/plugin-proposal-object-rest-spread": "7.20.7",
    "@babel/preset-env": "7.21.4",
    "@intlify/unplugin-vue-i18n": "~0.7.3",
    "@vue/test-utils": "2.3.2",
    "@vue/vue3-jest": "29.2.3",
    "axios": "1.3.4",
    "babel-jest": "29.5.0",
    "babel-loader": "9.1.2",
    "browserslist": "4.21.5",
    "buffer": "6.0.3",
    "caniuse-lite": "1.0.30001473",
    "clean-webpack-plugin": "4.0.0",
    "compression-webpack-plugin": "10.0.0",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.7.3",
    "css-minimizer-webpack-plugin": "5.0.0",
    "cssnano": "6.0.0",
    "dojo-util": "1.17.3",
    "dojo-webpack-plugin": "3.0.5",
    "ejs-loader": "0.5.0",
    "eslint": "8.37.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-eslint": "7.0.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-import-resolver-webpack": "0.13.2",
    "eslint-plugin-amd": "1.1.0",
    "eslint-plugin-compat": "4.1.2",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jsdoc": "40.1.1",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-markdown": "3.0.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-package-json": "0.1.4",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-snakecasejs": "2.2.0",
    "eslint-plugin-sort-dojo-dependency": "0.0.1",
    "eslint-plugin-vue": "9.10.0",
    "eslint-webpack-plugin": "4.0.0",
    "html-webpack-plugin": "5.5.0",
    "http-status-codes": "2.2.0",
    "i18next-conv": "13.1.1",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "jest-openapi": "0.14.2",
    "jest-tap-reporter": "1.9.0",
    "jsdom": "21.1.1",
    "markdown-include": "0.4.3",
    "markdownlint": "0.28.0",
    "markdownlint-cli": "0.33.0",
    "mini-css-extract-plugin": "2.7.5",
    "npm-run-all": "4.1.5",
    "openapi-merge-cli": "1.3.1",
    "path-browserify": "1.0.1",
    "pinia": "2.0.33",
    "prettier": "2.8.7",
    "redoc-cli": "0.13.21",
    "rtl-detect": "1.0.4",
    "stylelint": "15.4.0",
    "stylelint-config-standard": "32.0.0",
    "stylelint-declaration-block-no-ignored-properties": "2.7.0",
    "stylelint-no-nested-media": "0.1.0",
    "stylelint-no-unsupported-browser-features": "6.1.0",
    "stylelint-order": "6.0.3",
    "stylelint-webpack-plugin": "4.1.0",
    "stylelint-z-index-value-constraint": "1.3.0",
    "unix-timestamp": "1.0.3",
    "unused-webpack-plugin": "2.4.0",
    "vue": "3.2.47",
    "vue-i18n-extract-translations": "0.1.3",
    "vue-loader": "17.0.1",
    "vue-router": "4.1.6",
    "webpack": "5.77.0",
    "webpack-bundle-analyzer": "4.8.0",
    "webpack-cli": "5.0.1",
    "webpack-deduplication-plugin": "0.0.8",
    "webpack-dev-server": "4.13.2",
    "webpack-merge": "5.8.0",
    "webpack-sources": "3.2.3",
    "webpack-virtual-modules": "0.5.0",
    "yargs": "17.7.1"
  },
  "homepage": "http://ledgersmb.org/",
  "scripts": {
    "analyzer": "webpack-bundle-analyzer logs/stats.json UI/js -h 0.0.0.0",
    "build": "webpack --mode=production --stats errors-warnings",
    "build:dev": "webpack --progress --mode=development --stats errors-warnings",
    "lint": "npm run lint:css;npm run lint:js;npm run lint:markdown",
    "lint:css": "stylelint UI/css/*.css",
    "lint:js": "eslint --ext .js ./",
    "lint:js:fix": "eslint --fix --ext .js ./",
    "lint:markdown": "markdownlint --config .markdownlint.json --ignore ./node_modules .",
    "profile": "webpack --progress=profile --json > logs/stats.json",
    "readme": "webpack --mode production --stats errors-warnings",
    "serve": "webpack serve --mode development",
    "test": "jest",
    "test:unit": "vue-cli-service test:unit"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ]
  },
  "eslintConfig": {
    "settings": {
      "import/resolver": "webpack"
    },
    "overrides": [
      {
        "files": [
          "package.json"
        ],
        "rules": {
          "package-json/sort-collections": "error",
          "indent": [
            "error",
            2
          ]
        }
      },
      {
        "files": [
          "**/__tests__/**/*.[jt]s?(x)",
          "**/?(*.)+(spec|test).[tj]s?(x)"
        ],
        "plugins": [
          "jest"
        ],
        "extends": [
          "plugin:jest/recommended"
        ],
        "rules": {
          "jest/prefer-expect-assertions": "off"
        }
      }
    ],
    "plugins": [
      "amd",
      "compat",
      "import",
      "jest",
      "markdown",
      "package-json",
      "sort-dojo-dependency",
      "vue",
      "prettier"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser",
      "ecmaVersion": 6,
      "sourceType": "module",
      "requireConfigFile": false,
      "templateSettings": {
        "evaluate": [
          "[%",
          "%]"
        ],
        "interpolate": [
          "[%",
          "%]"
        ],
        "escape": [
          "[%",
          "%]"
        ]
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "amd": true,
      "es6": true
    },
    "extends": [
      "airbnb-base/legacy",
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:markdown/recommended",
      "plugin:vue/vue3-recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "dojo/",
      "dijit/",
      "node_modules/",
      "js/",
      "**/*.po*",
      "pod/**"
    ],
    "rules": {
      "camelcase": "error",
      "compat/compat": "warn",
      "consistent-return": "error",
      "curly": [
        "error",
        "all"
      ],
      "dot-notation": "error",
      "eqeqeq": "error",
      "func-names": 0,
      "global-require": "error",
      "guard-for-in": "error",
      "new-cap": 0,
      "no-alert": "error",
      "no-console": "error",
      "no-continue": 0,
      "no-else-return": "error",
      "no-lonely-if": "error",
      "no-multi-assign": "error",
      "no-multi-spaces": "error",
      "no-new-object": "error",
      "no-param-reassign": "error",
      "no-plusplus": 0,
      "no-restricted-globals": "error",
      "no-shadow": "error",
      "no-template-curly-in-string": "error",
      "no-undef": "error",
      "no-underscore-dangle": 0,
      "no-unused-expressions": "error",
      "no-unused-vars": "error",
      "no-use-before-define": "error",
      "no-useless-escape": "error",
      "no-useless-return": "error",
      "one-var": "error",
      "radix": "error",
      "spaced-comment": [
        "error",
        "always",
        {
          "block": {
            "balanced": true
          }
        }
      ],
      "vars-on-top": 0,
      "yoda": "error",
      "amd/no-unused-dependencies": "error",
      "amd/obsolete-dependencies": "error",
      "amd/sane-dependency-names": "error",
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error",
      "package-json/order-properties": [
        "error",
        [
          "name",
          "version",
          "lockfileVersion",
          "private",
          "publishConfig",
          "description",
          "keywords",
          "author",
          "license",
          "maintainers",
          "contributors",
          "bundlesize",
          "main",
          "browser",
          "_browserslist-comment",
          "browserslist",
          "bugs",
          "repository",
          "files",
          "bin",
          "directories",
          "man",
          "config",
          "dependencies",
          "devDependencies",
          "peerDependencies",
          "optionalDependencies",
          "bundledDependencies",
          "homepage",
          "scripts",
          "engines",
          "os",
          "cpu",
          "babel",
          "eslintConfig",
          "prettier",
          "stylelint",
          "lint-staged"
        ]
      ],
      "package-json/sort-collections": [
        "error",
        [
          "scripts",
          "devDependencies",
          "dependencies",
          "config"
        ]
      ],
      "package-json/valid-package-def": "error",
      "no-restricted-syntax": [
        "error",
        "SequenceExpression"
      ]
    }
  },
  "stylelint": {
    "defaultSeverity": "warning",
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-declaration-block-no-ignored-properties",
      "stylelint-no-nested-media",
      "stylelint-no-unsupported-browser-features",
      "stylelint-order"
    ],
    "ignoreFiles": [
      "**/*.js",
      "**/*.jsx",
      "**/*.html",
      "**/*.po*",
      "UI/**/dojo/**/*.css",
      "UI/**/dijit/**/*.css",
      "UI/**/util/**/*.css",
      "UI/js/**",
      "UI/pod/**",
      "doc/openapi/**"
    ],
    "rules": {
      "declaration-block-no-duplicate-custom-properties": null,
      "indentation": 4,
      "order/order": [
        "custom-properties",
        "declarations"
      ],
      "order/properties-alphabetical-order": true,
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "ignorePartialSupport": true
        }
      ],
      "plugin/declaration-block-no-ignored-properties": true,
      "pitcher/no-nested-media": true,
      "selector-class-pattern": null,
      "custom-property-pattern": null,
      "selector-id-pattern": null
    }
  }
}
