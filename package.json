{
  "name": "ledgersmb-js",
  "version": "1.9.0-dev",
  "description": "LedgerSMB JS files",
  "keywords": [
    "JavaScript",
    "Dojo",
    "Toolkit",
    "Dijit",
    "lsmb"
  ],
  "maintainers": [
    {
      "name": "Erik Huelsmann"
    },
    {
      "name": "Chris Travers"
    }
  ],
  "contributors": [
    {
      "name": "John Locke"
    },
    {
      "name": "David Godfrey"
    },
    {
      "name": "Yves Lavoie"
    }
  ],
  "license": "GPL-3.0-or-later",
  "bugs": "https://github.com/ledgersmb/LedgerSMB/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ledgersmb/LedgerSMB.git"
  },
  "bundlesize": [
    {
      "path": "./UI/js/*"
    }
  ],
  "browserslist": [
    "defaults",
    "last 2 versions",
    "not dead",
    "not IE 11",
    "not IE_Mob 11",
    "not op_mini all",
    "phantomjs 2.1",
    "maintained node versions"
  ],
  "devDependencies": {
    "@babel/eslint-parser": "^7.14.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "autoprefixer": "^10.2.5",
    "babel-loader": "8.2.2",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "6.4.1",
    "css-loader": "^5.2.5",
    "cssnano": "^5.0.4",
    "depcheck": "1.4.1",
    "dojo-util": "1.16.4",
    "dojo-webpack-plugin": "2.8.19",
    "ejs-loader": "0.5.0",
    "eslint": "7.27.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-eslint": "7.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-friendly-formatter": "4.0.1",
    "eslint-plugin-amd": "^1.1.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jsdoc": "^34.8.2",
    "eslint-plugin-json": "3.0.0",
    "eslint-plugin-markdown": "^2.1.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-snakecasejs": "2.2.0",
    "eslint-plugin-sort-dojo-dependency": "0.0.1",
    "eslint-webpack-plugin": "^2.5.4",
    "extract-css-chunks-webpack-plugin": "^4.9.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "^4.5.2",
    "inspectpack": "4.7.1",
    "markdown-spellcheck": "^1.3.1",
    "markdownlint": "^0.23.1",
    "markdownlint-cli": "^0.27.1",
    "npm-run-all": "4.1.5",
    "optimize-css-assets-webpack-plugin": "6.0.0",
    "prettier": "^2.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-no-unsupported-browser-features": "4.1.4",
    "stylelint-order": "4.1.0",
    "stylelint-order-config-standard": "0.1.3",
    "stylelint-webpack-plugin": "2.1.1",
    "terser-webpack-plugin": "4.2.3",
    "unused-webpack-plugin": "2.4.0",
    "url-loader": "4.1.1",
    "virtual-module-webpack-plugin": "0.4.1",
    "webpack": "^4.46.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.7.0",
    "webpack-log": "^3.0.2",
    "yargs": "^17.0.1"
  },
  "dependencies": {
    "content-disposition": "^0.5.3",
    "core-js": "3.12.1",
    "dijit": "1.16.4",
    "dojo": "1.16.4",
    "regenerator-runtime": "0.13.7"
  },
  "main": "UI/js/bootstrap.js",
  "homepage": "http://ledgersmb.org/",
  "scripts": {
    "build //": "See https://corgibytes.com/blog/2017/04/18/npm-tips/",
    "build": "webpack --mode=production",
    "build:dev": "webpack --progress --mode=development",
    "serve": "webpack-dev-server --env.dev",
    "lint:js": "eslint --ext .js ./",
    "lint:markdown": "markdownlint --config .markdownlint.json --ignore ./node_modules .",
    "test": "npm run lint:js;npm run lint:markdown"
  },
  "eslintConfig": {
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [
            "UI"
          ]
        }
      }
    },
    "plugins": [
      "amd",
      "sort-dojo-dependency",
      "prettier"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      },
      "requireConfigFile": false,
      "templateSettings": {
        "evaluate": [
          "[%",
          "%]"
        ],
        "interpolate": [
          "[%",
          "%]"
        ],
        "escape": [
          "[%",
          "%]"
        ]
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "amd": true,
      "es6": true
    },
    "extends": [
      "airbnb-base/legacy",
      "prettier",
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "ignorePatterns": [
      "dojo/",
      "dijit/",
      "node_modules/",
      "js/",
      "**/*.po*",
      "pod/**"
    ],
    "rules": {
      "camelcase": "error",
      "consistent-return": "error",
      "curly": [
        "error",
        "all"
      ],
      "dot-notation": "error",
      "eqeqeq": "error",
      "func-names": 0,
      "global-require": "error",
      "guard-for-in": "error",
      "new-cap": 0,
      "no-alert": "error",
      "no-console": "error",
      "no-continue": 0,
      "no-else-return": "error",
      "no-lonely-if": "error",
      "no-multi-assign": "error",
      "no-multi-spaces": "error",
      "no-new-object": "error",
      "no-param-reassign": "error",
      "no-plusplus": 0,
      "no-restricted-globals": "error",
      "no-shadow": "error",
      "no-template-curly-in-string": "error",
      "no-undef": "error",
      "no-underscore-dangle": 0,
      "no-unused-expressions": "error",
      "no-unused-vars": "error",
      "no-use-before-define": "error",
      "no-useless-escape": "error",
      "no-useless-return": "error",
      "one-var": "error",
      "radix": "error",
      "spaced-comment": [
        "error",
        "always",
        {
          "block": {
            "balanced": true
          }
        }
      ],
      "vars-on-top": 0,
      "yoda": "error",
      "amd/no-unused-dependencies": "error",
      "amd/obsolete-dependencies": "error",
      "amd/sane-dependency-names": "error",
      "prettier/prettier": [
        "error",
        {
          "bracketSpacing": true,
          "printWidth": 80,
          "quote-props": [
            "error",
            "consistent"
          ],
          "semi": true,
          "singleQuote": false,
          "tabWidth": 4,
          "trailingComma": "none",
          "useTabs": false,
          "insertPragma": true,
          "proseWrap": "preserve"
        }
      ],
      "no-restricted-syntax": [
        "error",
        "SequenceExpression"
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-no-unsupported-browser-features",
      "stylelint-order"
    ],
    "ignoreFiles": [
      "**/*.js",
      "**/*.jsx",
      "**/*.html",
      "**/*.po*",
      "UI/**/dojo/**/*.css",
      "UI/**/dijit/**/*.css",
      "UI/**/util/**/*.css",
      "UI/js/**",
      "UI/pod/**"
    ],
    "rules": {
      "declaration-block-no-duplicate-custom-properties": null,
      "indentation": 4,
      "order/order": [
        "custom-properties",
        "declarations"
      ],
      "order/properties-alphabetical-order": true,
      "plugin/no-unsupported-browser-features": true
    }
  }
}
