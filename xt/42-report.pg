    PREPARE test AS SELECT 
        running_balance = 100
     FROM report__gl(NULL, -- reference
                     (select accno from account where id = -1000),
                     NULL, NULL, -- category, source
                     NULL, NULL, -- memo, description
                     NULL, -- from_date
                     '1900-01-01'::date, -- to_date
